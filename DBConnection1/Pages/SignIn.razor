@page "/signin"
@inherits SignInBase
@using DBConnection1.Controls
<div class="sign-form">
    <p class="welcome-text">Hello @(string.IsNullOrEmpty(Username) ? "User" : Username) - Today is @Day</p>

    <ValidationInput placeholder="Username" ValueChangedCallback="UserNameValueChanged" Value="@Username"></ValidationInput>
    <ValidationInput placeholder="Password" type="password" Value="@Password"></ValidationInput>

    <button class="sign-button" type="submit">Sign in</button>

    <div class="sign-form">
        <a href="/signup">Sign up</a>
    </div>
</div>

